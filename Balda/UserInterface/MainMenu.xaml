<UserControl x:Class="Balda.UserInterface.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Balda.UserInterface"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
	<Grid Width="200" VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="35" />
			<RowDefinition Height="35" />
			<RowDefinition Height="35" />
			<RowDefinition Height="60" />
		</Grid.RowDefinitions>

		<TextBlock Text="MLG Balda" FontSize="36" TextAlignment="Center" />
		<Button Grid.Row="1" Content="Новая игра" Click="NewGame" />
		<Button Grid.Row="2" Content="Присоединиться к игре" />
		<Button Grid.Row="3" Content="Выход" Click="Exit" />
	</Grid>
</UserControl>